	year = {2023},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/hyp.14940},
	keywords = {bofedales, high-altitude wetlands, random forest, residence time, seasonal buffering, supervised classification, tropical Andes, Vilcanota headwaters, water security},
