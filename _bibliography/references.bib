	journal = {Hydrology and Earth System Sciences},
	author = {Mao, Feng and Clark, Julian and Karpouzoglou, Timothy and Dewulf, Art and Buytaert, Wouter and Hannah, David},
	year = {2017},
	pages = {3655--3670},
	file = {PDF:/Users/wouter/Zotero/storage/RDV3KVF8/Mao et al._2017.pdf:application/pdf},
}

